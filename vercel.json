{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_SANITY_PROJECT_ID": "@sanity_project_id",
    "NEXT_PUBLIC_SANITY_DATASET": "@sanity_dataset", 
    "NEXT_PUBLIC_SANITY_API_VERSION": "@sanity_api_version",
    "NEXT_PUBLIC_EMAILJS_SERVICE_ID": "@emailjs_service_id",
    "NEXT_PUBLIC_EMAILJS_TEMPLATE_ID_SALES": "@emailjs_template_sales",
    "NEXT_PUBLIC_EMAILJS_TEMPLATE_ID_THANKS": "@emailjs_template_thanks",
    "NEXT_PUBLIC_EMAILJS_PUBLIC_KEY": "@emailjs_public_key",
    "NEXT_PUBLIC_GA_MEASUREMENT_ID": "@ga_measurement_id"
  },
  "functions": {
    "app/blogs/[slug]/page.tsx": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        },
        {
          "key": "Cache-Control", 
          "value": "public, max-age=86400, s-maxage=86400"
        }
      ]
    },
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, s-maxage=86400"
        }
      ]
    }
  ]
}